{% extends 'base.html.twig' %}

{% block title %}Offres dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1 class="pb-2 border-bottom d-flex justify-content-between">Dashboard - {{ offres|length }} candidatures

    <a href="{{ path('app_home', {'reponse' : 'ATT'}) }}"  class="btn btn-light btn-sm">Candidatures en attente</a>
    <a href="{{ path('app_home', {'reponse' : 'NON'}) }}"  class="btn btn-secondary btn-sm">Candidatures refusée</a>

    <a href="{{ path('app_home', {'checkUrls' : '1'}) }}" class="btn btn-danger btn-sm">Vérification URL</a>
    {% include "offre/_find.html.twig" %}
    <a href="{{ path('app_offre_new') }}"><i class="fas fa-plus"></i></a>
    </h1>

    <table class="table table-striped sortable" id="myTable">
        <thead>
            <tr >
                <th scope="col">Id</th>
                <th scope="col">DateCandidature</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Lieu</th>
                <th scope="col" class="unsortable">Url</th>
                <th scope="col">Site</th>
                <th scope="col">Contact</th>
                <th scope="col">Reponse</th>
                <th scope="col">Relance</th>
                <th scope="col"></th>
                <th scope="col" class="unsortable">actions</th>
            </tr>
        </thead>
        {% include "offre/_tbody.html.twig" %}
    </table>

</div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags("sorttable") }}

{% endblock %}
